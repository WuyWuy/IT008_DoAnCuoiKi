<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="PrimaryColor" Color="#4F46E5"/>
    <SolidColorBrush x:Key="PrimaryLightColor" Color="#6366F1"/>
    <SolidColorBrush x:Key="AccentColor" Color="#0EA5E9"/>
    <SolidColorBrush x:Key="TextPrimary" Color="#1E1B4B"/>
    <SolidColorBrush x:Key="TextSecondary" Color="#64748B"/>
    <SolidColorBrush x:Key="TextWhite" Color="#FFFFFF"/>


    <SolidColorBrush x:Key="AppBackgroundSolid" Color="#F3F4F6"/>
    <LinearGradientBrush x:Key="AppBackgroundGradient" StartPoint="0,0" EndPoint="1,1" Opacity="0.8">
        <GradientStop Color="#93C5FD" Offset="0"/>
        <GradientStop Color="#93C5FD" Offset="1"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundLight" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#F8FAFF"/>
    <SolidColorBrush x:Key="SelectedBackground" Color="#EEF2FF"/>

    <SolidColorBrush x:Key="BorderLight" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="BorderStroke" Color="#BAE6FD"/>

    <SolidColorBrush x:Key="StatusBusyColor" Color="#EF4444"/>
    <SolidColorBrush x:Key="StatusBusyLightColor" Color="#FEE2E2"/>
    <SolidColorBrush x:Key="StatusMultiColor" Color="#F59E0B"/>
    <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
    <SolidColorBrush x:Key="DangerColor" Color="#BE123C"/>

</ResourceDictionary>