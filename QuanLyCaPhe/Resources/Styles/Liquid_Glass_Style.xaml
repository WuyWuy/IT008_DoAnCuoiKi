<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="LiquidGlassStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="BorderThickness" Value="1.2"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1" Opacity="1">
                    <GradientStop Color="#50FFFFFF" Offset="0"/>
                    <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#30FFFFFF" Offset="1"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="Background">
            <Setter.Value>
                <RadialGradientBrush GradientOrigin="-0.2,-0.2" Center="0.5,0.5" RadiusX="1.5" RadiusY="1.5" Opacity="0.6">

                    <GradientStop Color="#20FFFFFF" Offset="0"/>

                    <GradientStop Color="#05FFFFFF" Offset="0.5"/>

                    <GradientStop Color="#10FFFFFF" Offset="1"/>

                </RadialGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="Effect">
    <Setter.Value>
        <DropShadowEffect Color="#06B6D4" 
                          BlurRadius="20" 
                          ShadowDepth="10" 
                          Direction="315" 
                          Opacity="0.25"/>
    </Setter.Value>
</Setter>
    </Style>


    <Style x:Key="RunningGlowBorderStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="24"/>
        <Setter Property="BorderThickness" Value="3"/>
        <Setter Property="Background" Value="#10FFFFFF"/>
        <Setter Property="BorderBrush">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <LinearGradientBrush.RelativeTransform>
                        <RotateTransform CenterX="0.5" CenterY="0.5" Angle="0"/>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="White" Offset="0.0"/>
                    <GradientStop Color="#206366F1" Offset="0.5"/>
                    <GradientStop Color="LightGray" Offset="1.0"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>

        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="#4F46E5" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <EventTrigger RoutedEvent="Loaded">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation Storyboard.TargetProperty="(Border.BorderBrush).(Brush.RelativeTransform).(RotateTransform.Angle)"
                                     From="0" To="360" 
                                     Duration="0:0:2" 
                                     RepeatBehavior="Forever"/>
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GlassButtonStyle" TargetType="Button">
        <Setter Property="Height" Value="36"/>
        <Setter Property="Padding" Value="15,0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#1E1B4B"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4" 
                        SnapsToDevicePixels="True">

                        <Border.Effect>
                            <DropShadowEffect Color="#4F46E5" Opacity="0.15" BlurRadius="10" ShadowDepth="3" Direction="270"/>
                        </Border.Effect>

                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#F8FAFF"/>
                            <Setter TargetName="bd" Property="BorderBrush" Value="#6366F1"/>
                            <Setter Property="Foreground" Value="#4F46E5"/>
                        </Trigger>

                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="bd" Property="Background" Value="#EEF2FF"/>
                            <Setter TargetName="bd" Property="BorderBrush" Value="#4F46E5"/>
                            <Setter Property="Foreground" Value="#4F46E5"/>
                            <Setter TargetName="bd" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                            <Setter TargetName="bd" Property="Effect" Value="{x:Null}"/>
                            <Setter Property="Foreground" Value="#9CA3AF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="GlassDeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource GlassButtonStyle}">
        <Setter Property="Foreground" Value="#BE123C"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#F43F5E"/>
                <Setter Property="Background" Value="#FFF1F2"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="BorderBrush" Value="#BE123C"/>
                <Setter Property="Background" Value="#FFE4E6"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="GlassTextStyle" TargetType="TextBox">
        <Setter Property="Height" Value="36"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="#1E1B4B"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Cursor" Value="Arrow"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="bd"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4"
                        SnapsToDevicePixels="True">

                        <Border.Effect>
                            <DropShadowEffect Color="#4F46E5" Opacity="0.10" BlurRadius="10" ShadowDepth="3" Direction="270"/>
                        </Border.Effect>

                        <ScrollViewer x:Name="PART_ContentHost" 
                                  Margin="0"
                                  VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="bd" Property="Background" Value="#F3F4F6"/>
                            <Setter Property="Foreground" Value="#9CA3AF"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

