<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ============================ -->
    <!-- SHADOW EFFECTS -->
    <!-- ============================ -->

    <!-- Card Shadow - Mặc định -->
    <DropShadowEffect x:Key="CardShadow" 
                      BlurRadius="15" 
                      ShadowDepth="3" 
                      Opacity="0.12" 
                      Color="Black"/>

    <!-- Light Shadow - Cho element nhỏ -->
    <DropShadowEffect x:Key="LightShadow" 
                      BlurRadius="8" 
                      ShadowDepth="2" 
                      Opacity="0.08" 
                      Color="Black"/>

    <!-- Heavy Shadow - Cho modal/dialog -->
    <DropShadowEffect x:Key="HeavyShadow" 
                      BlurRadius="25" 
                      ShadowDepth="5" 
                      Opacity="0.15" 
                      Color="Black"/>

    <!-- Colored Shadow - Cho accent elements -->
    <DropShadowEffect x:Key="PrimaryShadow" 
                      BlurRadius="12" 
                      ShadowDepth="3" 
                      Opacity="0.15" 
                      Color="#4F46E5"/>

    <DropShadowEffect x:Key="GreenShadow" 
                      BlurRadius="12" 
                      ShadowDepth="3" 
                      Opacity="0.15" 
                      Color="#10B981"/>

    <DropShadowEffect x:Key="RedShadow" 
                      BlurRadius="12" 
                      ShadowDepth="3" 
                      Opacity="0.15" 
                      Color="#EF4444"/>

    <!-- ============================ -->
    <!-- GLOW EFFECTS -->
    <!-- ============================ -->

    <DropShadowEffect x:Key="BlueGlow" 
                      BlurRadius="20" 
                      ShadowDepth="0" 
                      Opacity="0.3" 
                      Color="#3B82F6"/>

    <DropShadowEffect x:Key="GreenGlow" 
                      BlurRadius="20" 
                      ShadowDepth="0" 
                      Opacity="0.3" 
                      Color="#10B981"/>

    <!-- ============================ -->
    <!-- HOVER EFFECTS -->
    <!-- ============================ -->

    <Style x:Key="HoverShadowStyle" TargetType="Border">
        <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Effect" Value="{StaticResource HeavyShadow}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>