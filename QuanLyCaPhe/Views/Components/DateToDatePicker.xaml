<UserControl x:Class="QuanLyCaPhe.Views.Components.DateToDatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components">
    
    <StackPanel x:Name="SelectDate" Orientation="Horizontal" 
            Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">

        <StackPanel>
            <Label Content="Theo"/>
            <ComboBox x:Name="Classify" Margin="0, 0, 20, 0" Width="70" Height="20">
                <ComboBoxItem Content="Ngày"/>
                <ComboBoxItem Content="Tháng"/>
                <ComboBoxItem Content="Năm"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel>
            <Label Content="Từ"/>
            <comp:DatePicker x:Name="StartDate" Margin="0, 0, 20, 0"/>
        </StackPanel>
        
        <StackPanel>
            <Label Content="Đến"/>
            <comp:DatePicker x:Name="EndDate" Margin="0, 0, 20, 0"/>
        </StackPanel>
    </StackPanel>
</UserControl>
