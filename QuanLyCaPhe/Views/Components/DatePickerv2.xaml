<UserControl x:Class="QuanLyCaPhe.Views.Components.DatePickerv2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyCaPhe.Views.Components"
             mc:Ignorable="d">
    <Border BorderBrush="Black">
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Prevbtn">
                <TextBlock Text="&#xE76B;" FontFamily="Segoe MDL2 Assets" 
                   FontSize="16" Foreground="#555"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
            <TextBox x:Name="Monthtb" Text="12" FontSize="16"/>
            <Border BorderBrush="Blue" Width="1" Height="auto"/>
            <TextBox x:Name="Yeartb" Text="2012" FontSize="16"/>
            <Button x:Name="Nextbtn">
                <TextBlock Text="&#xE76C;" FontFamily="Segoe MDL2 Assets" 
                   FontSize="16" Foreground="#555"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
