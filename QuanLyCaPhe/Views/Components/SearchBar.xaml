<UserControl x:Class="QuanLyCaPhe.Views.Components.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="auto" >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="Searchtb" Style="{StaticResource SearchBarStyle }"/>
            <Button x:Name="Searchbtn" Style="{StaticResource SearchButtonStyle}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/LuomXX.png" Height="14" Margin="0, 0, 7, 0"/>
                    <TextBlock Text="Tìm Kiếm"/>
                </StackPanel>
            </Button>
        </StackPanel>

    </Grid>
</UserControl>
