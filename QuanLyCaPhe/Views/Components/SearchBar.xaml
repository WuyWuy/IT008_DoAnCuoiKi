<UserControl x:Class="QuanLyCaPhe.Views.Components.SearchBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="auto" >
    <Grid>
        <Border>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="Searchtb" Style="{StaticResource SearchBarStyle}" FontSize="14"/>
                <Button x:Name="Searchbtn" Style="{StaticResource SearchButtonStyle}" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE721;" FontFamily="Segoe MDL2 Assets"
                       Foreground="White" 
                       Height="14"  
                       Margin="0, 2, 2, 0"/>
                        <TextBlock Text="Tìm kiếm"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
