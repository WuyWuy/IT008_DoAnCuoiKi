<UserControl x:Class="QuanLyCaPhe.Views.Components.DatePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <ComboBox x:Name="cbDay" Width="50" Height="20" Margin="0,0,0,0" VerticalContentAlignment="Center" SelectedIndex="0" IsEditable="True"/>

        <ComboBox x:Name="cbMonth" Width="50" Height="20" Margin="0,0,0,0" VerticalContentAlignment="Center" SelectedIndex="0" IsEditable="True"/>

        <ComboBox x:Name="cbYear" Width="70" Height="20" VerticalContentAlignment="Center" SelectedIndex="0" IsEditable="True"/>
    </StackPanel>
</UserControl>
