<UserControl x:Class="QuanLyCaPhe.Views.Components.CrudToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="auto" >
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="Addbtn" Content="Thêm"/>
            <Button x:Name="Delbtn" Content="Xóa"/>
            <Button x:Name="Editbtn" Content="Sửa"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Tìm Kiếm" />
                <TextBox x:Name="Searchtb" Width="200"/>
                <Button>
                    <Image Source="/Resources/Icons/menu.ico" Width="25" Height="25"/>
                </Button>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</UserControl>
