<Page x:Class="QuanLyCaPhe.Views.SharedPage.SchedulePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.SharedPage"
      mc:Ignorable="d" 
      Width="auto" Height="auto"
      Title="SchedulePage">

    <Grid Background="{StaticResource AppBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="10,10,10,5" Padding="20,15" 
                Style="{StaticResource DynamicGlassStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="◀" Click="PrevMonth_Click" 
                        HorizontalAlignment="Left"
                        Style="{StaticResource GlassButtonStyle}"
                        Width="40" Height="36"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="txtCurrentMonth" Text="Tháng 12, 2025" 
                               FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                               Foreground="#0C4A6E" 
                               VerticalAlignment="Center" TextAlignment="Center" Margin="10,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="▶" Click="NextMonth_Click" 
                            Style="{StaticResource GlassButtonStyle}"
                            Width="40" Height="36" Margin="0,0,15,0"/>

                    <Button Content="Xóa lịch tháng" Click="DeleteAll_Click" 
                            Style="{StaticResource GlassDeleteButtonStyle}"
                            Width="120" Height="36"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Margin="10,5,10,10" 
                Style="{StaticResource DynamicGlassStyle}" 
                Padding="0" ClipToBounds="True">

            <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#200C4A6E" BorderThickness="0,0,1,1" Background="#10FFFFFF">
                    <TextBlock Text="NGÀY" VerticalAlignment="Center" HorizontalAlignment="Center"
                               Foreground="#0C4A6E" FontWeight="Bold" FontFamily="Segoe UI" FontSize="13"/>
                </Border>

                <Border Grid.Row="0" Grid.Column="1" BorderBrush="#200C4A6E" BorderThickness="0,0,0,1" Background="#05FFFFFF">
                    <ScrollViewer x:Name="HeaderScrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Focusable="False" CanContentScroll="False" Background="Transparent" Padding="0">
                        <Grid x:Name="TimeHeaderGrid" Margin="0" HorizontalAlignment="Left" Height="50" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
                    </ScrollViewer>
                </Border>

                <Border Grid.Row="1" Grid.Column="0" BorderBrush="#200C4A6E" BorderThickness="0,0,1,0" Background="#05FFFFFF">
                    <ScrollViewer x:Name="LeftScrollViewer" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" Focusable="False" CanContentScroll="False" Background="Transparent" Padding="0">
                        <Grid x:Name="DateColumnGrid" Margin="0" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
                    </ScrollViewer>
                </Border>

                <ScrollViewer x:Name="ContentScrollViewer" Grid.Row="1" Grid.Column="1" 
                              HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" 
                              ScrollChanged="ContentScrollViewer_ScrollChanged" 
                              CanContentScroll="False" Background="Transparent" Padding="0">
                    <Grid x:Name="ScheduleGrid" Margin="0" SnapsToDevicePixels="True" UseLayoutRounding="True"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <Grid x:Name="PopupOverlay" Grid.RowSpan="2" Visibility="Collapsed">
            <Border Background="#40000000" MouseDown="Cancel_Click"/>
            <Border Width="350" Height="Auto" VerticalAlignment="Center" HorizontalAlignment="Center"
                    Style="{StaticResource DynamicGlassStyle}" Padding="25">
                <StackPanel>
                    <TextBlock Text="ĐĂNG KÝ CA LÀM" 
                               FontFamily="Segoe UI Light" FontSize="22" FontWeight="Bold" 
                               Foreground="#0C4A6E" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                    <TextBlock Text="Nhân viên" FontWeight="SemiBold" Foreground="#0C4A6E" Margin="0,0,0,5"/>
                    <ComboBox x:Name="cbName" Style="{StaticResource ComboBoxStyle}" Height="38" Margin="0,0,0,15"/>

                    <TextBlock Text="Ngày làm việc" FontWeight="SemiBold" Foreground="#0C4A6E" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtDate" IsReadOnly="True" Style="{StaticResource GlassTextStyleInput}" Background="#40FFFFFF" Margin="0,0,0,15"/>

                    <TextBlock Text="Giờ bắt đầu" FontWeight="SemiBold" Foreground="#0C4A6E" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtStartTime" IsReadOnly="True" Style="{StaticResource GlassTextStyleInput}" Background="#40FFFFFF" Margin="0,0,0,15"/>

                    <TextBlock Text="Giờ kết thúc (HH:mm)" FontWeight="SemiBold" Foreground="#0C4A6E" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="cbEndHour" Grid.Column="0" Style="{StaticResource ComboBoxStyle}" Height="38"/>
                        <TextBlock Text=":" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#0C4A6E"/>
                        <ComboBox x:Name="cbEndMinute" Grid.Column="2" Style="{StaticResource ComboBoxStyle}" Height="38"/>
                    </Grid>

                    <TextBlock x:Name="txtError" Text="" Foreground="#EF4444" FontSize="12" Margin="0,5,0,0" FontWeight="SemiBold"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                        <Button Content="Hủy" Click="Cancel_Click" 
                                Style="{StaticResource GlassDeleteButtonStyle}" 
                                Width="80"/>

                        <Button Content="Xác nhận" Click="Confirm_Click" 
                                Style="{StaticResource GlassButtonStyle}" 
                                Width="100" Margin="10,0,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>