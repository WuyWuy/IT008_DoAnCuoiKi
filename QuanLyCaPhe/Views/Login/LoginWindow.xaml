<Window x:Class="QuanLyCaPhe.Views.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập Hệ Thống" Height="500" Width="800" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20" Background="White" ClipToBounds="True">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0">
                
            </Border>

            <Grid Grid.Column="1" Background="{StaticResource BackgroundLight}">

                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                        Width="40" Height="40" Margin="10"
                        Background="Transparent" BorderThickness="0" 
                        Foreground="#6B7280" FontSize="18" Cursor="Hand"
                        Click="BtnClose_Click"/>

                <StackPanel VerticalAlignment="Center" Margin="40">

                    <TextBlock Text="Xin chào!" FontSize="28" FontWeight="Bold" Foreground="#1E1B4B" Margin="0,0,0,5"/>
                    <TextBlock Text="Vui lòng đăng nhập để tiếp tục." FontSize="14" Foreground="#6B7280" Margin="0,0,0,30"/>

                    <TextBlock Text="Email" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource GlassTextStyleInput}" Height="45"/>

                    <TextBlock Text="Mật khẩu" FontWeight="SemiBold" Foreground="#374151" Margin="0,20,0,5"/>
                    <PasswordBox x:Name="txtPassword" Style="{StaticResource MaterialPasswordBoxStyle}" Height="45"/>

                    <TextBlock x:Name="tbStatus" Foreground="#EF4444" Margin="0,10,0,0" TextWrapping="Wrap"/>

                    <Button Content="ĐĂNG NHẬP" Height="45" Margin="0,30,0,0"
                            Style="{StaticResource SurprisePaymentButtonStyle}"
                            Click="BtnLogin_Click"/>

                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>