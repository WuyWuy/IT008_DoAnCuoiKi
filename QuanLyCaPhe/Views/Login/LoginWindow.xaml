<Window x:Class="QuanLyCaPhe.Views.Login.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập Hệ Thống" Height="500" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="20" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0"
                    Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top"
                    Width="40" Height="40" Margin="10"
                    Background="Transparent" BorderThickness="0" 
                    Foreground="#6B7280" FontSize="18" Cursor="Hand"
                    Focusable="False"
                    Click="BtnClose_Click"/>

            <Border Grid.Row="0">
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Top" 
                            Margin="0,30,0,0">
                    <TextBlock Text="JetM" 
                               Style="{StaticResource FontHeader}"
                               VerticalAlignment="Center"/>

                    <Path Data="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"
                          Fill="#B0C4DE" Stretch="Uniform"
                          Height="35" Width="28" Margin="3,2,3,0"
                          VerticalAlignment="Center"/>

                    <TextBlock Text="on Coffee" 
                               Style="{StaticResource FontHeader}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40, 40, 40, 0">

                <TextBlock Text="Xin chào!" Style="{StaticResource FontHeaderMedium}" Margin="0,0,0,5"/>
                <TextBlock Text="Vui lòng đăng nhập để tiếp tục." FontSize="14" Foreground="#6B7280" Margin="0,0,0,30"/>

                <TextBlock Text="Email" Style="{StaticResource FontMenu}" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Height="35" Style="{StaticResource MaterialTextBoxStyle}"/>

                <TextBlock Text="Mật khẩu" Style="{StaticResource FontMenu}" Margin="0,20,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="35" Style="{StaticResource MaterialPasswordBoxStyle}"/>

                <TextBlock x:Name="tbStatus" Foreground="#EF4444" Margin="0,10,0,0" TextWrapping="Wrap"/>

                <Button Content="ĐĂNG NHẬP" Height="45" Margin="0,0,0,0"
                        Style="{StaticResource SurprisePaymentButtonStyle}"
                        IsDefault="True"
                        Click="BtnLogin_Click"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,50,0,30">
                    <Hyperlink Click="BtnForgotPassword_Click" Foreground="#64748B" TextDecorations="None" Cursor="Hand">
                        Quên mật khẩu?
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>