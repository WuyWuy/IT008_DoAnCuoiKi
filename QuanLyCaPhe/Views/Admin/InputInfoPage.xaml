<Page x:Class="QuanLyCaPhe.Views.Admin.InputInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SuppliesPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu"
                     Style="{DynamicResource GlassContextMenu}">
            <MenuItem x:Name="BtnEdit" Header="Sửa số liệu này" Click="BtnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem x:Name="BtnDelete" Header="Xóa số liệu này" Foreground="Red" Click="BtnDelete_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="Red"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--________________________________Tiêu đề__________________________________-->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Padding="10" Foreground="{StaticResource PrimaryLightColor}"
                   Text="Hàng Hóa" FontSize="36" FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <comp:ExcelControl VerticalAlignment="Bottom" Margin="3"/>
            </StackPanel>

            <comp:SearchBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <Border Style="{StaticResource LiquidGlassStyle}" 
                Grid.Row="2" Margin="4" Padding="4, 4, 4 ,10">
            <DataGrid Grid.Row="2" x:Name="InputInfosdg" 
          LoadingRow="Productsdg_LoadingRow"
          AutoGenerateColumns="False" IsReadOnly="True" 
          Style="{StaticResource CardStyleDataGridStyle}"
          HeadersVisibility="Column">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource CardRowType}">
                        <Setter Property="ContextMenu" Value="{StaticResource ContextMenu}"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" Width="auto"/>
                    <DataGridTextColumn Header="Ngày Nhập" Binding="{Binding DateInput, StringFormat={}{0:dd/MM/yyyy}}" Width="auto"/>
                    <DataGridTextColumn Header="Nguyên Liệu" Binding="{Binding IngredientName}" Width="*"/>
                    <DataGridTextColumn Header="Số Lượng" Binding="{Binding DisplayQuantity}" Width="auto"/>
                    <DataGridTextColumn Header="Thành Tiền" Binding="{Binding InputPrice, StringFormat={}{0:N0} đ}" Width="auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button x:Name="BtnAdd" Grid.Row="2" Panel.ZIndex="999"
        Style="{StaticResource FabButtonStyle}"
        HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Click="BtnAdd_Click">
            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
               FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Button>
    </Grid>
</Page>
