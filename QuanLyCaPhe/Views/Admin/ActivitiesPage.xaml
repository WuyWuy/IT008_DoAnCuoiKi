<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="QuanLyCaPhe.Views.Admin.ActivitiesPage"
      Title="ActivitiesPage">

    <Page.Resources>
        <DataTemplate x:Key="ActivityItemTemplate">
            <Grid Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Style="{StaticResource LiquidGlassStyle}"
                        Width="32" Height="32" CornerRadius="16" Background="#F1F5F9" 
                        VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Path Data="{Binding IconPath}" Fill="{Binding IconColor}" 
                          Stretch="Uniform" Width="16" Height="16" 
                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding Description}" FontWeight="SemiBold" Foreground="#1E1B4B" FontSize="14" TextTrimming="CharacterEllipsis"/>
                    <TextBlock Text="{Binding Detail}" FontSize="12" Foreground="{StaticResource TextPrimary}" TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <TextBlock Grid.Column="2" 
                           Text="{Binding TimeAgo}" 
                           Foreground="{StaticResource StatusBusyColor}" 
                           FontSize="11" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Right"/>
            </Grid>
        </DataTemplate>

        <Style x:Key="ActivityItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Border Style="{StaticResource LiquidGlassStyle}" 
                Padding="20, 20, 5, 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="🕒 HOẠT ĐỘNG GẦN ĐÂY" FontSize="16" FontWeight="Bold" Foreground="#1E1B4B" Margin="0,0,0,15"/>

                <ListBox x:Name="lbActivities" Grid.Row="1"
                         Style="{StaticResource ActivityListBoxStyle}"
                         Background="Transparent" 
                         BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ItemTemplate="{DynamicResource ActivityItemTemplate}"
                         ItemContainerStyle="{DynamicResource ActivityItemContainerStyle}" av:ItemsSource="{av:SampleData ItemCount=5}"/>
            </Grid>
        </Border>
    </Grid>
</Page>