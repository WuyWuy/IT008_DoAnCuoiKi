<Window x:Class="QuanLyCaPhe.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
        mc:Ignorable="d"
        Title="AdminWindow" Height="auto" Width="850">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="Sidebar" Grid.Column="0" Panel.ZIndex="1"
                CornerRadius="20"
                Margin="-20, 0, 0, -20"
                Width="200"
                MouseEnter="Sidebar_MouseEnter"
                MouseLeave="Sidebar_MouseLeave"
                Style="{StaticResource AdminSideBarStyle}">
            
            <StackPanel>
                <Button x:Name="Homebtn" Content="Trang chủ" 
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Homebtn_Click"/>

                <Button x:Name="Prodbtn" Content="Món ăn"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Prodbtn_Click"/>

                <Button x:Name="Ingredbtn" Content="Nguyên liệu"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Ingredbtn_Click"/>

                <Button x:Name="Staffbtn" Content="Nhân viên"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Staffbtn_Click"/>

                <Button x:Name="Suplybtn" Content="Hàng hóa"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Suplybtn_Click"/>

                <Button x:Name="Billbtn" Content="Hóa đơn"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Billbtn_Click"/>
                <Button x:Name="Timelbtn" Content="Ca làm"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Timelbtn_Click"/>

                <Button x:Name="Profitbtn" Content="Doanh thu"
                        Style="{StaticResource AdminButtonStyle}"
                        Click="Profitbtn_Click"/>
            </StackPanel>

        </Border>

        <Button x:Name="Menubtn" Grid.Column="0" Margin="10" 
                Background="Transparent"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Panel.ZIndex="999"
                Style="{StaticResource FabButtonStyle}"
                Click="Menubtn_Click">
            <TextBlock Text="&#xE700;" FontFamily="Segoe MDL2 Assets" 
                       FontSize="20" FontWeight="Bold" Foreground="Black"/>
        </Button>
        

        <Frame x:Name="MainFrame" Panel.ZIndex="1" Margin="10, 0, 5, 0"
               Grid.Column="2" NavigationUIVisibility="Hidden" Background="White" />

    </Grid>
</Window>
