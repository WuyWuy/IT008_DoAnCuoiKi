<Window x:Class="QuanLyCaPhe.Views.Admin.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
        mc:Ignorable="d"
        Title="AdminWindow"
        MinHeight="650" MinWidth="1000"
        WindowStyle="SingleBorderWindow"
        Background="{StaticResource AppBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border x:Name="Sidebar" Grid.Column="0" Panel.ZIndex="1"
                CornerRadius="0,20,20,0"
                Background="White" Opacity="0.95"
                ClipToBounds="True"
                Style="{StaticResource LiquidGlassStyle}"
                Width="250"
                Margin="-20, 0, 0, -20" Padding="20,0,0,0">

            <StackPanel Margin="0, 40, 0, 0">

                <TextBlock Text="MENU" Style="{StaticResource FontSmall}" Margin="25,0,0,10" Opacity="0.6"/>

                <Button x:Name="Homebtn" Content="Trang chủ" Tag="&#xE80F;"
                Style="{StaticResource AdminButtonStyle}" Click="Homebtn_Click"/>

                <Button x:Name="Prodbtn" Content="Món ăn" Tag="&#xE719;"
                Style="{StaticResource AdminButtonStyle}" Click="Prodbtn_Click"/>

                <Button x:Name="Ingredbtn" Content="Nguyên liệu" Tag="&#xE80A;"
                Style="{StaticResource AdminButtonStyle}" Click="Ingredbtn_Click"/>

                <Button x:Name="Staffbtn" Content="Nhân viên" Tag="&#xE77B;"
                Style="{StaticResource AdminButtonStyle}" Click="Staffbtn_Click"/>

                <Button x:Name="Suplybtn" Content="Hàng hóa" Tag="&#xE74C;"
                Style="{StaticResource AdminButtonStyle}" Click="Suplybtn_Click"/>

                <Button x:Name="Billbtn" Content="Hóa đơn" Tag="&#xE7B8;"
                Style="{StaticResource AdminButtonStyle}" Click="Billbtn_Click"/>

                <Button x:Name="Timelbtn" Content="Ca làm" Tag="&#xE787;"
                Style="{StaticResource AdminButtonStyle}" Click="Timelbtn_Click"/>

                <Button x:Name="Profitbtn" Content="Doanh thu" Tag="&#xE9D9;"
                Style="{StaticResource AdminButtonStyle}" Click="Profitbtn_Click"/>

            </StackPanel>

        </Border>

        <!-- Logout button -->
        <Button x:Name="Logoutbtn" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Right"
                Margin="0, 0, 10, 10"
                Panel.ZIndex="999"
                Style="{StaticResource GlassUserButtonStyle}"
                Click="Logoutbtn_Click"/>
        
        <Button x:Name="Menubtn" Grid.Column="0" Margin="10" 
                Background="Transparent"
                VerticalAlignment="Top" HorizontalAlignment="Right"
                Panel.ZIndex="999"
                Style="{StaticResource FabButtonStyle}"
                Click="Menubtn_Click">
            <TextBlock Text="&#xE700;" FontFamily="Segoe MDL2 Assets" 
                       FontSize="20" FontWeight="Bold" Foreground="Black"/>
        </Button>
        

        <Frame x:Name="MainFrame" Panel.ZIndex="1" Margin="10, 0, 5, 0"
               Grid.Column="2" NavigationUIVisibility="Hidden" Background="Transparent" />

    </Grid>
</Window>
