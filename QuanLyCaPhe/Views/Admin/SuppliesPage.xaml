<Page x:Class="QuanLyCaPhe.Views.Admin.SuppliesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SuppliesPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu">
            <MenuItem x:Name="BtnEdit" Header="Sửa số liệu này" Click="BtnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem x:Name="BtnDelete" Header="Xóa số liệu này" Foreground="Red" Click="BtnDelete_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="Red"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Text="Hàng Hóa" Style="{StaticResource AdminTextBlockStyle}"/>
        
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <comp:ExcelControl VerticalAlignment="Bottom" Margin="3"/>
            </StackPanel>

            <comp:SearchBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>
        
        <DataGrid Grid.Row="2" x:Name="dgExpense" AutoGenerateColumns="False" IsReadOnly="True" 
                  Style="{StaticResource CardStyleDataGridStyle}"
                  HeadersVisibility="Column" GridLinesVisibility="Horizontal">
            <!--chổ này cũng chưa có DB nốt với thêm cái Models nha đặt tên đại đại đi xong hết ae mình hiệu chỉnh sau-->
            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã Phiếu" Binding="{Binding ImportId}" Width="auto"/>
                <DataGridTextColumn Header="Ngày Nhập" Binding="{Binding ImportDate, StringFormat=dd/MM/yyyy}" Width="auto"/>
                <DataGridTextColumn Header="Nguyên Liệu" Binding="{Binding IngredientName}" Width="auto"/>
                <DataGridTextColumn Header="Số Lượng" Binding="{Binding Quantity}" Width="auto"/>
                <DataGridTextColumn Header="Thành Tiền" Binding="{Binding Cost, StringFormat={}{0:N0} đ}" Width="auto" FontWeight="Bold" Foreground="Red"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="BtnAdd" Grid.Row="2" Panel.ZIndex="999"
        Style="{StaticResource FabButtonStyle}"
        HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Click="BtnAdd_Click">
            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
               FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Button>
    </Grid>
</Page>
