<Page x:Class="QuanLyCaPhe.Views.Admin.TopProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TopProduct">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="RankIconTextStyle">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Rank}" Value="1">
                    <Setter Property="Text" Value="&#xE735;"/>
                    <Setter Property="Foreground" Value="#F59E0B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Rank}" Value="2">
                    <Setter Property="Text" Value="&#xE735;"/>
                    <Setter Property="Foreground" Value="#64748B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Rank}" Value="3">
                    <Setter Property="Text" Value="&#xE735;"/>
                    <Setter Property="Foreground" Value="#B45309"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Border Style="{StaticResource LiquidGlassStyle}" 
                Padding="20, 20, 20, 20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="🏆 TOP MÓN BÁN CHẠY" 
                           FontSize="16" FontWeight="Bold" Foreground="#1E1B4B" 
                           Margin="0,0,0,15"/>

                <ItemsControl x:Name="icBestSellers" Grid.Row="1">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Style="{StaticResource LiquidGlassStyle}"
                                        Width="32" Height="32" CornerRadius="16" Background="#F8FAFC" 
                                        VerticalAlignment="Center" HorizontalAlignment="Left">
                                    <TextBlock Style="{StaticResource RankIconTextStyle}"/>
                                </Border>

                                <StackPanel Grid.Column="1" Margin="10,0,10,0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="SemiBold" Foreground="#1E1B4B" FontSize="14" 
                                               TextTrimming="CharacterEllipsis"/>

                                    <Border Height="4" CornerRadius="2" Background="#F1F5F9" Margin="0,4,20,0" HorizontalAlignment="Stretch">
                                        <Border HorizontalAlignment="Left" Width="40" CornerRadius="2" Background="{StaticResource PrimaryColor}"/>
                                    </Border>
                                </StackPanel>

                                <Border Grid.Column="2" 
                                        Background="#EEF2FF" CornerRadius="6" Padding="8,4"
                                        VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Count}" FontWeight="Bold" Foreground="#4F46E5" FontSize="13"/>
                                        <TextBlock Text=" ly" FontSize="11" Foreground="#6B7280" VerticalAlignment="Bottom" Margin="2,0,0,1"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <TextBlock x:Name="txtNoData" Grid.Row="1" 
                           Text="Chưa có dữ liệu tháng này" 
                           Foreground="#94A3B8" FontStyle="Italic" FontSize="13"
                           HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Grid>
</Page>