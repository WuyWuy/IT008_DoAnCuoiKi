<Page x:Class="QuanLyCaPhe.Views.Admin.BillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BillsPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu">
            <MenuItem x:Name="BtnInfo" Header="Xem chi tiết" Click="BtnInfo_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Padding="20,10" Foreground="{StaticResource PrimaryLightColor}"
                   Text="Lịch Sử Hóa Đơn" FontSize="32" FontWeight="Bold"/>

        <Grid Grid.Row="1" Margin="20,0,20,10">
            <comp:SearchBar HorizontalAlignment="Right" Clicked="SearchBar_Clicked" Width="300"/>
        </Grid>

        <Border Style="{StaticResource LiquidGlassStyle}" Grid.Row="2" Margin="10" Padding="5">
            <DataGrid x:Name="Billsdg" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      LoadingRow="Billsdg_LoadingRow"
                      IsReadOnly="True" 
                      SelectionMode="Single"
                      Style="{StaticResource CardStyleDataGridStyle}">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource CardRowType}">
                        <Setter Property="ContextMenu" Value="{StaticResource ContextMenu}"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" Width="80"/>
                    <DataGridTextColumn Header="Thời gian" Binding="{Binding DateCheckIn, StringFormat='dd/MM/yyyy HH:mm'}" Width="150"/>
                    <DataGridTextColumn Header="Bàn" Binding="{Binding TableName}" Width="100"/>
                    <DataGridTextColumn Header="Nhân viên" Binding="{Binding StaffName}" Width="*"/>
                    <DataGridTextColumn Header="Tổng tiền" Binding="{Binding TotalPrice, StringFormat={}{0:N0}}" Width="120" FontWeight="Bold"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>