<Page x:Class="QuanLyCaPhe.Views.Admin.BillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BillsPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu">
            <MenuItem x:Name="BtnEdit" Header="Sửa hóa đơn này" Click="BtnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem x:Name="BtnDelete" Header="Xóa hóa đơn này" Foreground="Red" Click="BtnDelete_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="Red"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--________________________________Hóa đơn__________________________________-->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Padding="10" Foreground="{StaticResource PrimaryLightColor}"
                   Text="Hóa Đơn" FontSize="36" FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <comp:ExcelControl HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3"/>
            
            <comp:SearchBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <Border Style="{StaticResource LiquidGlassStyle}" 
                Grid.Row="2" Margin="4" Padding="4, 4, 4 ,10">
            <DataGrid x:Name="Billsdg" Grid.Row="2"
          AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
          Style="{StaticResource CardStyleDataGridStyle}">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource CardRowType}">
                        <Setter Property="ContextMenu" Value="{StaticResource ContextMenu}"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>
                    <DataGridTextColumn Header="Tên nhân viên" Binding="{Binding StaffName}" Width="*"/>
                    <DataGridTextColumn Header="Thời gian" Binding="{Binding Time}" Width="auto"/>
                    <DataGridTextColumn Header="Bàn số" Binding="{Binding Quantity}" Width="auto"/>
                    <DataGridTextColumn Header="Tổng đơn" Binding="{Binding Price}" Width="auto"/>
                </DataGrid.Columns>


            </DataGrid>
        </Border>

        <Button x:Name="BtnAdd" Grid.Row="2" Panel.ZIndex="999"
        Style="{StaticResource FabButtonStyle}"
        HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Click="BtnAdd_Click">
            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
               FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Button>
    </Grid>
</Page>
