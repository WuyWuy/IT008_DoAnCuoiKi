<Page x:Class="QuanLyCaPhe.Views.Admin.BillsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BillsPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Text="Nguyên Liệu" 
                   Style="{StaticResource AdminTextBlockStyle}"/>
        
        <Grid Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <comp:ExcelControl VerticalAlignment="Bottom" Margin="3"/>

            </StackPanel>

            <comp:SearchBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <DataGrid x:Name="Ingredientsdg" Grid.Row="2"
              AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
              Style="{StaticResource CardStyleDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>
                <DataGridTextColumn Header="Tên nguyên liệu" Binding="{Binding IngName}" Width="*"/>

                <DataGridTextColumn Header="Còn lại" Binding="{Binding Quantity}" Width="auto"/>
                <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="auto"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
