<Page x:Class="QuanLyCaPhe.Views.Admin.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductsPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu">
            <MenuItem x:Name="BtnEdit" Header="Sửa món này" Click="BtnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem x:Name="BtnDelete" Header="Xóa món này" Foreground="Red" Click="BtnDelete_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="Red"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Text="Món" 
                   Style="{StaticResource AdminTextBlockStyle}"/>

        <Grid Grid.Row="1">
            <comp:ExcelControl VerticalAlignment="Bottom" Margin="3"/>
            <comp:SearchBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <DataGrid x:Name="Productsdg" Grid.Row="2" 
          AutoGenerateColumns="False" 
          IsReadOnly="True" 
          SelectionMode="Single"
          Style="{StaticResource CardStyleDataGridStyle}">

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource CardRowType}">
                    <Setter Property="ContextMenu" Value="{StaticResource ContextMenu}"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="auto"/>
                <DataGridTextColumn Header="Tên món" Binding="{Binding ProName}" Width="*"/>
                <DataGridTextColumn Header="Giá bán" Binding="{Binding Price, StringFormat={}{0:N0}đ}" Width="auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Button x:Name="BtnAdd" Grid.Row="2" Panel.ZIndex="999"
                Style="{StaticResource FabButtonStyle}"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnAdd_Click">
            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
               FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Button>
    </Grid>
</Page>