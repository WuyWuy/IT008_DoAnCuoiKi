<Page x:Class="QuanLyCaPhe.Views.Admin.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu">
            <MenuItem x:Name="BtnEdit" Header="Sửa nguyên liệu này" Click="BtnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem x:Name="BtnDelete" Header="Xóa nguyên liệu này" Foreground="Red" Click="BtnDelete_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="Red"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--________________________________Tiêu đề__________________________________-->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Padding="10" Foreground="{StaticResource PrimaryLightColor}"
                   Text="Nhân Viên" FontSize="36" FontWeight="Bold"/>

        <Grid Grid.Row="1">
            <comp:ExcelControl x:Name="IETable" Clicked="IETable_Clicked" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3"/>
            <comp:SearchBar x:Name="SearchBar"  Clicked="SearchBar_Clicked" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <Border Style="{StaticResource LiquidGlassStyle}" 
                Grid.Row="2" Margin="4" Padding="4, 4, 4 ,10">
            <DataGrid x:Name="Usersdg" Grid.Row="2"
                      LoadingRow="Usersdg_LoadingRow"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                  Style="{StaticResource CardStyleDataGridStyle}" Grid.ColumnSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" Width="auto"/>
                    <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="*"/>
                    <DataGridTextColumn Header="Số Điện thoại" Binding="{Binding Phone}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="*"/>
                    <DataGridTextColumn Header="Giới tính" Binding="{Binding Gender}" Width="*"/>
                    <DataGridTextColumn Header="Chức vụ" Binding="{Binding RoleName}" Width="*"/>
                    <DataGridTextColumn Header="Lương/giờ" Binding="{Binding HourlyWage, StringFormat=N0}" Width="*"/>
                </DataGrid.Columns>

            </DataGrid>
        </Border>

        <Button x:Name="BtnAdd" Grid.Row="2" Panel.ZIndex="999"
        Style="{StaticResource FabButtonStyle}"
        HorizontalAlignment="Right" VerticalAlignment="Bottom"
        Click="BtnAdd_Click">
            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
               FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Button>
    </Grid>
</Page>
