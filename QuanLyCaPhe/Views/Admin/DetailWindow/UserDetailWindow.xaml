<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông Tin Nhân Viên" Height="750" Width="480"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BorderStroke}" >
    <Border Padding="30">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="HỒ SƠ NHÂN VIÊN" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Họ và tên" FontWeight="SemiBold" Margin="0,5,0,5" Foreground="#0C4A6E"/>
                    <TextBox x:Name="txtFullName" Style="{StaticResource GlassTextStyleInput}"/>

                    <TextBlock Text="Email đăng nhập" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#0C4A6E"/>
                    <TextBox x:Name="txtEmail" Style="{StaticResource GlassTextStyleInput}"/>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Số điện thoại" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                            <TextBox x:Name="txtPhone" Style="{StaticResource GlassTextStyleInput}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Giới tính" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                            <ComboBox x:Name="cboGender" Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Nam" Tag="Male" IsSelected="True"/>
                                <ComboBoxItem Content="Nữ" Tag="Female"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <TextBlock Text="Địa chỉ" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#0C4A6E"/>
                    <TextBox x:Name="txtAddress" Style="{StaticResource GlassTextStyleInput}"/>

                    <Grid Margin="0,15,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Lương/Giờ (VNĐ)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                            <TextBox x:Name="txtHourlyWage" Style="{StaticResource GlassTextStyleInput}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Chức vụ" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                            <ComboBox x:Name="cboRole" Style="{StaticResource ComboBoxStyle}">
                                <ComboBoxItem Content="Admin" Tag="Admin"/>
                                <ComboBoxItem Content="Staff" Tag="Staff" IsSelected="True"/>
                            </ComboBox>
                        </StackPanel>
                    </Grid>

                    <StackPanel x:Name="pnlPassword" Margin="0,15,0,0">
                        <TextBlock Text="Mật khẩu khởi tạo" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#EF4444"/>
                        <PasswordBox x:Name="txtPassword" Style="{StaticResource MaterialPasswordBoxStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Hủy bỏ" Width="100" Margin="0,0,10,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
                <Button Content="Lưu Hồ Sơ" Width="120" IsDefault="True" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>