<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.TableDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông Tin Bàn" 
        MinHeight="400" Height="auto" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BorderStroke}">
    <Border Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÔNG TIN BÀN" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">

                <TextBlock Text="Tên bàn" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtName" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Hiện trạng" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <ComboBox x:Name="cboStatus" IsReadOnly="True" Style="{StaticResource ComboBoxStyle}" Height="38">
                            <ComboBoxItem Content="Free" Tag="Free" IsSelected="True"/>
                            <ComboBoxItem Content="Busy" Tag="Busy"/>
                            <ComboBoxItem Content="Selected" Tag="Selected"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <TextBlock Text="Sử dụng bàn này?" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <CheckBox x:Name="chkIsActive" Content="Đang hoạt động" IsChecked="True"
                              FontSize="14" VerticalContentAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Ghi chú / Lưu ý" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <!-- Force top-aligned content inside TextBox: AcceptsReturn + explicit template with PART_ContentHost VerticalAlignment="Top" -->
                <TextBox x:Name="txtNote"
                         Height="80"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Padding="5"
                         Text=""
                         Background="{StaticResource CardBackground}"
                         BorderBrush="{StaticResource BorderLight}"
                         BorderThickness="1">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    SnapsToDevicePixels="True">
                                <!-- PART_ContentHost must exist for TextBox to render content; set VerticalAlignment=Top to force top placement -->
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Padding="{TemplateBinding Padding}"
                                              VerticalAlignment="Top"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy" Width="90" Margin="0,0,10,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
                <Button Content="Lưu" Width="100" IsDefault="True" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>