<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.InputInfoDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Phiếu Nhập Kho" Height="500" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BackgroundLight}">
    <Border Style="{StaticResource DynamicGlassStyle}" Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="PHIẾU NHẬP KHO" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Chọn nguyên liệu" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <ComboBox x:Name="cboIngredient" Style="{StaticResource ComboBoxStyle}"
                          DisplayMemberPath="IngName" SelectedValuePath="Id" Height="38"/>

                <TextBlock Text="Ngày nhập hàng" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#0C4A6E"/>
                <DatePicker x:Name="dpDateInput" Height="38" BorderThickness="0" Background="Transparent"/>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Số lượng nhập" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <TextBox x:Name="txtCount" Style="{StaticResource GlassTextStyleInput}"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Đơn vị" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <TextBox x:Name="txtUnit" IsReadOnly="True" Background="#F3F4F6" Style="{StaticResource GlassTextStyleInput}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Giá trị lô hàng (VNĐ)" FontWeight="SemiBold" Margin="0,15,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtInputPrice" Style="{StaticResource GlassTextStyleInput}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button Content="Nhập Kho" Width="110" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
                <Button Content="Hủy" Width="90" Margin="10,0,0,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>