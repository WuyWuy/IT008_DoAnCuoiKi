<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.RecipeEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Công Thức Pha Chế" Height="500" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BackgroundLight}">
    <Border Style="{StaticResource DynamicGlassStyle}" Padding="20" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock x:Name="tbTitle" Text="CÔNG THỨC PHA CHẾ" 
                           FontSize="24" FontFamily="Segoe UI Light" FontWeight="Bold" Foreground="#0C4A6E"/>
                <TextBlock Text="Quản lý định lượng nguyên liệu cho món" FontSize="14" Foreground="#64748B"/>
            </StackPanel>

            <DataGrid x:Name="dgRecipe" Grid.Row="1" 
                      Style="{StaticResource CardStyleDataGridStyle}"
                      AutoGenerateColumns="False" IsReadOnly="True" 
                      Background="Transparent" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nguyên liệu" Binding="{Binding IngName}" Width="*"/>
                    <DataGridTextColumn Header="Định lượng" Binding="{Binding Amount}" Width="150"/>
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="btnAdd" Content="Thêm NL" Width="100" Style="{StaticResource GlassButtonStyle}" Margin="0,0,10,0" Click="btnAdd_Click"/>
                <Button x:Name="btnDelete" Content="Xóa NL" Width="100" Style="{StaticResource GlassDeleteButtonStyle}" Margin="0,0,10,0" Click="btnDelete_Click"/>
                <Button x:Name="btnClose" Content="Đóng" Width="90" Style="{StaticResource GlassDeleteButtonStyle}" Background="Transparent" BorderBrush="#CBD5E1" Click="btnClose_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>