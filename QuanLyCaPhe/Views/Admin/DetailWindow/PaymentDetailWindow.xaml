<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.PaymentDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông Tin Tài Khoản" 
        Height="520" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BorderStroke}">
    <Border Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÔNG TIN TÀI KHOẢN" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tên Ngân hàng" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <TextBox x:Name="txtBankName" Style="{StaticResource GlassTextStyleInput}" ToolTip="Ví dụ: MB Bank, VietinBank"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Mã BIN" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <TextBox x:Name="txtBin" Style="{StaticResource GlassTextStyleInput}" ToolTip="Tra cứu tại vietqr.io (VD: 970422)"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Số tài khoản" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtAccNum" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,15"/>

                <TextBlock Text="Tên chủ tài khoản (Viết hoa không dấu)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtAccName" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,15" CharacterCasing="Upper"/>

                <TextBlock Text="Giao diện QR (Template)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <ComboBox x:Name="cboTemplate" Style="{StaticResource ComboBoxStyle}" Height="38">
                    <ComboBoxItem Content="compact2 (Khuyên dùng)" Tag="compact2" IsSelected="True"/>
                    <ComboBoxItem Content="compact (Gọn nhẹ)" Tag="compact"/>
                    <ComboBoxItem Content="qr_only (Chỉ mã QR)" Tag="qr_only"/>
                    <ComboBoxItem Content="print (Để in ấn)" Tag="print"/>
                </ComboBox>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy" Width="90" Margin="0,0,10,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
                <Button Content="Lưu" Width="100" IsDefault="True" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>