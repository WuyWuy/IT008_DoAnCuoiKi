<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.PaymentDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông Tin Tài Khoản" 
        Height="520" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BorderStroke}">
    <Border Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÔNG TIN TÀI KHOẢN" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Tên Ngân hàng" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <!-- Replaced TextBox with editable ComboBox of banks -->
                        <ComboBox x:Name="cboBankName" Style="{StaticResource ComboBoxStyle}" Height="38"
                          IsEditable="True" IsTextSearchEnabled="True" ToolTip="Chọn hoặc nhập tên ngân hàng"
                          SelectionChanged="cboBankName_SelectionChanged" LostFocus="cboBankName_LostFocus">
                            <ComboBoxItem Content="VietinBank" Tag="970415"/>
                            <ComboBoxItem Content="Vietcombank" Tag="970436"/>
                            <ComboBoxItem Content="BIDV" Tag="970418"/>
                            <ComboBoxItem Content="Agribank" Tag="970405"/>
                            <ComboBoxItem Content="OCB" Tag="970448"/>
                            <ComboBoxItem Content="MBBank" Tag="970422"/>
                            <ComboBoxItem Content="Techcombank" Tag="970407"/>
                            <ComboBoxItem Content="ACB" Tag="970416"/>
                            <ComboBoxItem Content="VPBank" Tag="970432"/>
                            <ComboBoxItem Content="TPBank" Tag="970423"/>
                            <ComboBoxItem Content="Sacombank" Tag="970403"/>
                            <ComboBoxItem Content="HDBank" Tag="970437"/>
                            <ComboBoxItem Content="VietCapitalBank" Tag="970454"/>
                            <ComboBoxItem Content="SCB" Tag="970429"/>
                            <ComboBoxItem Content="VIB" Tag="970441"/>
                            <ComboBoxItem Content="SHB" Tag="970443"/>
                            <ComboBoxItem Content="Eximbank" Tag="970431"/>
                            <ComboBoxItem Content="MSB" Tag="970426"/>
                            <ComboBoxItem Content="CAKE" Tag="546034"/>
                            <ComboBoxItem Content="Ubank" Tag="546035"/>
                            <ComboBoxItem Content="KienLongBank" Tag="970452"/>
                            <ComboBoxItem Content="KBank" Tag="668888"/>
                            <ComboBoxItem Content="MAFC" Tag="977777"/>
                            <ComboBoxItem Content="HongLeong" Tag="970442"/>
                            <ComboBoxItem Content="KEBHANAHN" Tag="970467"/>
                            <ComboBoxItem Content="KEBHanaHCM" Tag="970466"/>
                            <ComboBoxItem Content="Citibank" Tag="533948"/>
                            <ComboBoxItem Content="CBBank" Tag="970444"/>
                            <ComboBoxItem Content="CIMB" Tag="422589"/>
                            <ComboBoxItem Content="DBSBank" Tag="796500"/>
                            <ComboBoxItem Content="Vikki" Tag="970406"/>
                            <ComboBoxItem Content="VBSP" Tag="999888"/>
                            <ComboBoxItem Content="GPBank" Tag="970408"/>
                            <ComboBoxItem Content="KookminHCM" Tag="970463"/>
                            <ComboBoxItem Content="KookminHN" Tag="970462"/>
                            <ComboBoxItem Content="Woori" Tag="970457"/>
                            <ComboBoxItem Content="VRB" Tag="970421"/>
                            <ComboBoxItem Content="HSBC" Tag="458761"/>
                            <ComboBoxItem Content="IBKHN" Tag="970455"/>
                            <ComboBoxItem Content="IBKHCM" Tag="970456"/>
                            <ComboBoxItem Content="ViettelMoney" Tag="971005"/>
                            <ComboBoxItem Content="Timo" Tag="963388"/>
                            <ComboBoxItem Content="VNPTMoney" Tag="971011"/>
                            <ComboBoxItem Content="SaigonBank" Tag="970400"/>
                            <ComboBoxItem Content="BacABank" Tag="970409"/>
                            <ComboBoxItem Content="MoMo" Tag="971025"/>
                            <ComboBoxItem Content="PVcomBank Pay" Tag="971133"/>
                            <ComboBoxItem Content="PVcomBank" Tag="970412"/>
                            <ComboBoxItem Content="MBV" Tag="970414"/>
                            <ComboBoxItem Content="NCB" Tag="970419"/>
                            <ComboBoxItem Content="ShinhanBank" Tag="970424"/>
                            <ComboBoxItem Content="ABBANK" Tag="970425"/>
                            <ComboBoxItem Content="VietABank" Tag="970427"/>
                            <ComboBoxItem Content="NamABank" Tag="970428"/>
                            <ComboBoxItem Content="PGBank" Tag="970430"/>
                            <ComboBoxItem Content="VietBank" Tag="970433"/>
                            <ComboBoxItem Content="BaoVietBank" Tag="970438"/>
                            <ComboBoxItem Content="SeABank" Tag="970440"/>
                            <ComboBoxItem Content="COOPBANK" Tag="970446"/>
                            <ComboBoxItem Content="LPBank" Tag="970449"/>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Mã BIN" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <!-- txtBin is read-only and filled from bank selection -->
                        <TextBox x:Name="txtBin" Style="{StaticResource GlassTextStyleInput}" ToolTip="Tra cứu tại vietqr.io (VD: 970422)" IsReadOnly="True"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Số tài khoản" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtAccNum" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,15"/>

                <TextBlock Text="Tên chủ tài khoản (Viết hoa không dấu)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtAccName" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,15" CharacterCasing="Upper"/>

                <TextBlock Text="Giao diện QR (Template)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <ComboBox x:Name="cboTemplate" Style="{StaticResource ComboBoxStyle}" Height="38">
                    <ComboBoxItem Content="compact2 (Khuyên dùng)" Tag="compact2" IsSelected="True"/>
                    <ComboBoxItem Content="compact (Gọn nhẹ)" Tag="compact"/>
                    <ComboBoxItem Content="qr_only (Chỉ mã QR)" Tag="qr_only"/>
                    <ComboBoxItem Content="print (Để in ấn)" Tag="print"/>
                </ComboBox>

            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy" Width="90" Margin="0,0,10,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
                <Button Content="Lưu" Width="100" IsDefault="True" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>