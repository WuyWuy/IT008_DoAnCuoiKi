<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.IngredientDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông Tin Nguyên Liệu" 
        MinHeight="600" Height="auto" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource  BorderStroke}">
    <Border Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="KHO NGUYÊN LIỆU" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Top">
                <TextBlock Text="Tên nguyên liệu" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtIngName" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Đơn vị tính" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <TextBox x:Name="txtUnit" Style="{StaticResource GlassTextStyleInput}" ToolTip="Ví dụ: kg, lit, hộp"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Tồn kho hiện tại" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                        <TextBox x:Name="txtQuantity" Style="{StaticResource GlassTextStyleInput}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Hủy" Width="90" Margin="0,0,10,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
                <Button Content="Cập nhật" Width="100" IsDefault="True" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>