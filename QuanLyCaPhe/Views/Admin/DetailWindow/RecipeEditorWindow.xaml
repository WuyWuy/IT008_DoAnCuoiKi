<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.RecipeAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Nguyên Liệu" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BackgroundLight}">
    <Border Style="{StaticResource DynamicGlassStyle}" Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÊM NGUYÊN LIỆU" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="22" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Chọn nguyên liệu" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <ComboBox x:Name="cbIngredients" Style="{StaticResource ComboBoxStyle}"
                          DisplayMemberPath="IngName" SelectedValuePath="Id" Height="38" Margin="0,0,0,15"/>

                <TextBlock Text="Số lượng / Định lượng" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="tbAmount" Style="{StaticResource GlassTextStyleInput}"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,25,0,0">
                <Button x:Name="btnOk" Content="Thêm" Width="90" Style="{StaticResource GlassButtonStyle}" Click="btnOk_Click"/>
                <Button x:Name="btnCancel" Content="Hủy" Width="80" Margin="10,0,0,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="btnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>