<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.RecipeEditorWindow"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 Title="Recipe Editor" Height="420" Width="640">

 <Grid Margin="10">
 <Grid.RowDefinitions>
 <RowDefinition Height="Auto"/>
 <RowDefinition Height="*"/>
 <RowDefinition Height="Auto"/>
 </Grid.RowDefinitions>

 <TextBlock x:Name="tbTitle" FontSize="18" FontWeight="Bold" />

 <DataGrid x:Name="dgRecipe" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,8,0,8">
 <DataGrid.Columns>
 <DataGridTextColumn Header="Ingredient" Binding="{Binding IngName}" Width="*" />
 <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="120" />
 <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="80" />
 </DataGrid.Columns>
 </DataGrid>

 <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0">
 <Button x:Name="btnAdd" Content="Add" Width="80" Margin="3" Click="btnAdd_Click"/>
 <Button x:Name="btnDelete" Content="Delete" Width="80" Margin="3" Click="btnDelete_Click"/>
 <Button x:Name="btnClose" Content="Close" Width="80" Margin="3" Click="btnClose_Click"/>
 </StackPanel>
 </Grid>
</Window>