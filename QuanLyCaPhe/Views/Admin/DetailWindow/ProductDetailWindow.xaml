<Window x:Class="QuanLyCaPhe.Views.Admin.DetailWindow.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi Tiết Món Ăn" Height="380" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource BorderStroke}">
    <Border Padding="25" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="THÔNG TIN MÓN" 
                       HorizontalAlignment="Center" 
                       FontFamily="Segoe UI Light" FontSize="24" FontWeight="Bold" 
                       Foreground="#0C4A6E" Margin="0,0,0,25"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Tên món đồ uống" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtName" Style="{StaticResource GlassTextStyleInput}" Margin="0,0,0,20"/>

                <TextBlock Text="Giá bán (VNĐ)" FontWeight="SemiBold" Margin="0,0,0,5" Foreground="#0C4A6E"/>
                <TextBox x:Name="txtPrice" Style="{StaticResource GlassTextStyleInput}"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Lưu" Width="100" Style="{StaticResource GlassButtonStyle}" Click="BtnSave_Click"/>
                <Button Content="Hủy" Width="90" Margin="10,0,0,0" Style="{StaticResource GlassDeleteButtonStyle}" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>