<Page x:Class="QuanLyCaPhe.Views.Admin.ProfitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfitPage">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--________________________________Doanh số__________________________________-->
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" 
                   Padding="10" Foreground="{StaticResource PrimaryLightColor}"
                   Text="Doanh Số" FontSize="36" FontWeight="Bold"/>



        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <comp:DatePickerv2 VerticalAlignment="Bottom" Margin="3"/>
            <comp:ExcelControl VerticalAlignment="Bottom" Margin="3"/>
            
        </StackPanel>

        <Grid Grid.Row="3" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Margin="10,0,10,0" Background="MediumSpringGreen" 
                    Style="{StaticResource ProfitMoneyPanelStyle}">
                <StackPanel>
                    <TextBlock Text="TỔNG THU"/>
                    <TextBlock Text="99999999999đ" FontSize="30"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Margin="10,0,10,0" Background="IndianRed"
                    Style="{StaticResource ProfitMoneyPanelStyle}">
                <StackPanel>
                    <TextBlock Text="TỔNG CHI"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Margin="10,0,10,0" Background="CornflowerBlue"
                    Style="{StaticResource ProfitMoneyPanelStyle}">
                <StackPanel>
                    <TextBlock Text="LỢI NHUẬN"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Chart -->
        <Border Grid.Row="4" Grid.RowSpan="2"
        Padding="10" Margin="10"
        BorderThickness="1"
        Background="White"
        Style="{StaticResource RunningGlowBorderStyle}">
            <Frame x:Name="ChartFrame"/>
        </Border>

    </Grid>
</Page>
