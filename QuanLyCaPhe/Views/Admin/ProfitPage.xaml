<Page x:Class="QuanLyCaPhe.Views.Admin.ProfitPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProfitPage">
    
    <Grid Background="#F5F7FA" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <comp:DateToDatePicker Grid.Row="1" Margin="10"/>

        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="10" Margin="10,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="TỔNG THU"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="TỔNG CHI"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="2" Background="White" CornerRadius="10" Margin="0,0,10,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="LỢI NHUẬN"/>
                </StackPanel>
            </Border>
        </Grid>

        <TabControl Grid.Row="3" BorderThickness="0" Background="Transparent">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="Padding" Value="15,10"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="Transparent"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Chi tiết Thu (Hóa Đơn)">
                <DataGrid x:Name="dgIncome" AutoGenerateColumns="False" IsReadOnly="True" 
                      Background="White" Margin="0,10,0,0"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã HĐ" Binding="{Binding Id}" Width="80"/>
                        <DataGridTextColumn Header="Ngày Bán" Binding="{Binding CreatedDate, StringFormat=dd/MM/yyyy HH:mm}" Width="150"/>
                        <DataGridTextColumn Header="Nhân Viên" Binding="{Binding StaffName}" Width="150"/>
                        <DataGridTextColumn Header="Tổng Tiền" Binding="{Binding TotalAmount, StringFormat={}{0:N0} đ}" Width="*" FontWeight="Bold" Foreground="Green"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Chi tiết Chi (Nhập Kho)">
                <DataGrid x:Name="dgExpense" AutoGenerateColumns="False" IsReadOnly="True" 
                      Background="White" Margin="0,10,0,0"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Phiếu" Binding="{Binding ImportId}" Width="80"/>
                        <DataGridTextColumn Header="Ngày Nhập" Binding="{Binding ImportDate, StringFormat=dd/MM/yyyy}" Width="150"/>
                        <DataGridTextColumn Header="Nguyên Liệu" Binding="{Binding IngredientName}" Width="200"/>
                        <DataGridTextColumn Header="Số Lượng" Binding="{Binding Quantity}" Width="100"/>
                        <DataGridTextColumn Header="Thành Tiền" Binding="{Binding Cost, StringFormat={}{0:N0} đ}" Width="*" FontWeight="Bold" Foreground="Red"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

    </Grid>
</Page>
