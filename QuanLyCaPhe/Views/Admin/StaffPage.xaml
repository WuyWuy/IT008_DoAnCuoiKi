<Page x:Class="QuanLyCaPhe.Views.Admin.StaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StaffPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <comp:CrudToolBar VerticalAlignment="Bottom" Margin="3, 3, 20, 3"/>
                <comp:ExcelControl VerticalAlignment="Bottom" Margin="3"/>

            </StackPanel>

            <comp:SearchBar HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <DataGrid x:Name="Staffsdg" Grid.Row="1"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                  Background="White" Foreground="Black"
                  BorderBrush="Black" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="STT" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Họ và tên" Binding="{Binding FullName}" Width="150"/>
                <DataGridTextColumn Header="Địa chỉ" Binding="{Binding Address}" Width="150"/>
                <DataGridTextColumn Header="Số Điện thoại" Binding="{Binding Phone}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Chức vụ" Binding="{Binding RoleName}" Width="200"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Page>
