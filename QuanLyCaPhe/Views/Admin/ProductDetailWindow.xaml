<Window x:Class="QuanLyCaPhe.Views.Admin.ProductDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
        mc:Ignorable="d"
        Title="ProductDetailWindow" Height="300" Width="500">
    <Grid>
        <Border BorderBrush="#0984e3" BorderThickness="1" Background="White">
            <StackPanel Margin="20">
                <TextBlock Text="CHI TIẾT MÓN ĂN" FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Tên món:"/>
                <TextBox x:Name="txtName" Height="35" Margin="0,0,0,15"/>

                <TextBlock Text="Giá bán:"/>
                <TextBox x:Name="txtPrice" Height="35" Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Hủy bỏ" Click="BtnCancel_Click" Width="100" Background="Gray" Margin="0,0,10,0"/>
                    <Button Content="LƯU LẠI" Click="BtnSave_Click" Width="100" Background="#0984e3" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
