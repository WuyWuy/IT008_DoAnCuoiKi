<Page x:Class="QuanLyCaPhe.Views.Admin.IngredientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuanLyCaPhe.Views.Admin"
      xmlns:comp="clr-namespace:QuanLyCaPhe.Views.Components"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IngredientsPage">

    <Page.Resources>
        <ContextMenu x:Key="ContextMenu" Style="{DynamicResource GlassContextMenu}">
            <MenuItem x:Name="BtnEdit" Header="Sửa nguyên liệu này" Click="BtnEdit_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE70F;" FontFamily="Segoe MDL2 Assets"/>
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem x:Name="BtnDelete" Header="Xóa nguyên liệu này" Foreground="Red" Click="BtnDelete_Click">
                <MenuItem.Icon>
                    <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="Red"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
        Margin="10, 10, 0, 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock Grid.Column="0" Text="&#xE80A;" Style="{StaticResource PageHeaderIcon}"/>
                    <TextBlock Text="NGUYÊN LIỆU" Style="{StaticResource PageHeaderTitle}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <comp:ExcelControl x:Name="IETable" Clicked="IETable_Clicked"
                               HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="3" Loaded="IETable_Loaded"/>
            <comp:SearchBar x:Name="SearchBar" Clicked="SearchBar_Clicked"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="3"/>
        </Grid>

        <Border Style="{StaticResource LiquidGlassStyle}" 
                Grid.Row="2" Margin="4" Padding="4, 4, 4 ,10">
            <DataGrid x:Name="Ingredientsdg" Grid.Row="2"
                  LoadingRow="Ingredientsdg_LoadingRow"
                  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                  Style="{StaticResource CardStyleDataGridStyle}">

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource CardRowType}">
                        <Setter Property="ContextMenu" Value="{StaticResource ContextMenu}"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=Header}" Width="auto"/>
                    <DataGridTextColumn Header="Tên nguyên liệu" Binding="{Binding IngName}" Width="*"/>
                    <DataGridTextColumn Header="Còn lại" Binding="{Binding Quantity}" Width="auto"/>
                    <DataGridTextColumn Header="Đơn vị" Binding="{Binding Unit}" Width="auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button x:Name="BtnAdd" Grid.Row="2" Panel.ZIndex="999"
                Style="{StaticResource FabButtonStyle}"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Click="BtnAdd_Click">
            <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
                       FontSize="20" FontWeight="Bold" Foreground="White"/>
        </Button>
    </Grid>
</Page>
