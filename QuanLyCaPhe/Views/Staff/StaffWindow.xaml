<Window x:Class="QuanLyCaPhe.Views.Staff.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCaPhe"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Quản lý quán cà phê" Height="450" Width="800" Background="White">

    <Window.Resources>
        <Style x:Key="TableButtonStyle" TargetType="Button">
            <!-- use Min sizes so buttons can expand to fill grid cells -->
            <Setter Property="MinHeight" Value="50"/>
            <Setter Property="MinWidth" Value="50"/>
            <!-- moderate margin -->
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Selected">
                    <Setter Property="Background" Value="#2196F3"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#1976D2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Busy">
                    <Setter Property="Background" Value="Crimson"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="#B22222"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Selected Busy">
                    <Setter Property="Background" Value="Orange"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OverlayButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="grid_wrap">
                            <!-- Overlay mờ -->
                            <Border x:Name="overlay"
                            Background="Transparent"
                            Opacity="0"
                            CornerRadius="6"
                            />

                            <!-- Nội dung gốc của nút -->
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Khi hover → overlay mờ -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="overlay" Property="Background" Value="Black"/>
                                <Setter TargetName="overlay" Property="Opacity" Value="0.2"/>
                            </Trigger>

                            <!-- Khi bị disable (ví dụ m muốn làm hiệu ứng cho nút khác) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="overlay" Property="Background" Value="Gray"/>
                                <Setter TargetName="overlay" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <local:IntGreaterThanZeroToVisibilityConverter x:Key="IntToVis"/>
        <local:SecondsToTimeConverter x:Key="SecondsToTimeConverter"/>
    </Window.Resources>

    <Grid Background="#FF393D3D">
        <Grid.RowDefinitions>
            <RowDefinition Height="89*"/>
            <RowDefinition Height="345*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANE: narrow button column + content column with nested grids -->

        <!-- LEFT PANE: narrow button column + content column with nested grids -->
        <!-- LEFT PANE: narrow button column + content column with nested grids -->
        <Grid Margin="0,0,0,-1" Background="#FF067B80" Grid.RowSpan="2" HorizontalAlignment="Left" Width="68" Grid.Column="1">
            <Grid.RowDefinitions>
                <!-- sort buttons -->
                <!-- clock -->
                <!-- logout -->
                <RowDefinition Height="154*"/>
                <RowDefinition Height="200*"/>
                <RowDefinition Height="Auto"/>
                <!-- spacer -->
            </Grid.RowDefinitions>

            <Grid  Background="White" VerticalAlignment="Bottom" Width="64" Margin="0,9,0,0" Grid.Row="1">

                <StackPanel VerticalAlignment="Stretch"  Margin="0,32,0,10">
                    <Button x:Name="btnSortNormal"  Style="{StaticResource OverlayButtonStyle}" Content="" Click="SortNormal_Click" Width="36" Height="36" Margin="0,6" ToolTip="Sắp xếp theo ID" FontWeight="Bold">
                        <Button.Background>
                            <ImageBrush ImageSource="/Views/Staff/icons8-sort-50.png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnSortIncrease"  Style="{StaticResource OverlayButtonStyle}" Content="" Click="SortIncrease_Click" Width="36" Height="36" Margin="0,6" ToolTip="Sắp xếp tăng dần theo thời gian còn lại" FontWeight="Bold">
                        <Button.Background>
                            <ImageBrush ImageSource="/Views/Staff/icons8-sort-64 (1).png"/>
                        </Button.Background>
                    </Button>
                    <Button x:Name="btnSortDecrease"  Style="{StaticResource OverlayButtonStyle}" Content="" Click="SortDecrease_Click" Width="36" Height="36" Margin="0,6" ToolTip="Sắp xếp giảm dần theo thời gian còn lại" FontWeight="Bold" BorderBrush="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Views/Staff/icons8-sort-64 (2).png"/>
                        </Button.Background>
                    </Button>
                </StackPanel>
                <TextBlock HorizontalAlignment="Center" Margin="0,7,0,0" TextWrapping="Wrap" Text="Sort" VerticalAlignment="Top" FontWeight="Bold" FontSize="15"/>
            </Grid>
            <Grid HorizontalAlignment="Center" Height="48" VerticalAlignment="Top" Width="0" Margin="0,5,0,0" Grid.Row="1">
                <Grid HorizontalAlignment="Center" Height="48" VerticalAlignment="Center"/>

            </Grid>

            <!-- Clock placed below sort buttons; foreground set to black as requested. Increase width to avoid wrapping. -->
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="68" Margin="0,91,0,0" Height="48">
                <TextBlock x:Name="tbClockTime" FontSize="14" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" />
                <TextBlock x:Name="tbClockDayMonth" FontSize="11" Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" />
                <TextBlock x:Name="tbClockYear" FontSize="11" Foreground="White" HorizontalAlignment="Center" TextAlignment="Center" />
            </StackPanel>
            <Grid Height="76" Margin="3,5,2,0" Width="63" Grid.Row="2" ToolTip="Đăng xuất">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btnLogout" Style ="{StaticResource OverlayButtonStyle}" Content="" Click="BtnLogout_Click"
                        Width="54" Height="60" HorizontalAlignment="Right" ToolTip="Đăng xuất" FontWeight="Bold" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Margin="0,5,6,0" VerticalAlignment="Top">
                    <Button.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="-0.166"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Button.RenderTransform>
                    <Button.Background>
                        <ImageBrush ImageSource="/Views/Staff/icons8-log-out-64.png"/>
                    </Button.Background>
                </Button>
            </Grid>
        </Grid>
        <!-- LEFT PANE: narrow button column + content column with nested grids -->
        <Grid Grid.ColumnSpan="3" Height="90" VerticalAlignment="Top"  Background="#FF067B80">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid HorizontalAlignment="Left" Height="90" VerticalAlignment="Center"  Width="320" Margin="10,0,0,0" Grid.ColumnSpan="2">
                <TextBlock HorizontalAlignment="Left" Height="86" TextWrapping="Wrap" VerticalAlignment="Top" Width="180" Foreground="White" FontSize="30" FontWeight="Bold" Margin="10,0,0,0"><Run Text="Quản lý "/><LineBreak/><Run Text="quán cà phê"/></TextBlock>
                <Grid HorizontalAlignment="Left" Height="75" Margin="195,5,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="1.786,0.273">
                    <Grid.Background>
                        <ImageBrush ImageSource="/Views/Staff/icons8-coffee-script-48.png"/>
                    </Grid.Background>
                </Grid>
            </Grid>
            <Grid Grid.Column="1" HorizontalAlignment="Left" Height="34" Margin="330,0,0,0" VerticalAlignment="Top" Width="150"/>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Height="34" VerticalAlignment="Top" Width="145" Background="White"/>
        </Grid>
        <!-- LEFT PANE: narrow button column + content column with nested grids -->
        <Grid Grid.Column="0" Margin="68,29,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2">

            <!-- Row0: blank spacer (1) -->

            <!-- Content column: title, subtitle, tables -->

            <!-- top blank row (1) + main area row (2) -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="61*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!-- content column -->
                <!-- N/I/D column -->
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Margin="10,65,0,0" Grid.RowSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="6*"/>
                    <RowDefinition Height="67*"/>
                </Grid.RowDefinitions>

                <!-- Title area -->
                <!-- Subtitle area -->
                <Grid Margin="0,27,0,0"/>

                <TextBlock VerticalAlignment="Top"
                               FontSize="20" Text="Danh sách quản lý bàn" Foreground="White" Height="38" Grid.RowSpan="2"  HorizontalAlignment="Center" Margin="0,5,0,0"/>
                <!-- Tables area -->
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- ListBox fills available space and uses a UniformGrid so items size uniformly to fill area -->
                    <ListBox x:Name="lbTables"
                             BorderThickness="0"
                             Focusable="False"
                             SelectionMode="Single"
                             VerticalContentAlignment="Stretch"
                             HorizontalContentAlignment="Stretch"
                             Padding="0"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{x:Null}" Margin="0,0,0,10">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <!-- make UniformGrid stretch to fill the host width (do not bind to ActualWidth) -->
                                <UniformGrid Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                        <ListBox.ItemContainerStyle>
                            <Style TargetType="{x:Type ListBoxItem}">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <!-- make the button stretch to fill its ListBoxItem cell -->
                                <Button Tag="{Binding Id}"
                                        Click="Table_Click"
                                        PreviewMouseLeftButtonDown="Table_PreviewMouseLeftButtonDown"
                                        Style="{StaticResource TableButtonStyle}"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch">
                                    <StackPanel HorizontalAlignment="Center">

                                        <StackPanel.Background>
                                            <ImageBrush/>
                                        </StackPanel.Background>
                                        <Image Source="/Views/Staff/coffee-cup.png"
                                        Width="24"
                                        Height="24"
                                        Margin="0,0,0,4"
                                        Stretch="Uniform" HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Countdown, Converter={StaticResource SecondsToTimeConverter}}"
                                                   HorizontalAlignment="Center" FontSize="11"
                                                   Visibility="{Binding Countdown, Converter={StaticResource IntToVis}}"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Grid>
            <!-- Narrow left column: sort buttons, clock, spacer, logout -->

        </Grid>

        <!-- LEFT PANE: narrow button column + content column with nested grids -->

        <!-- RIGHT PANE unchanged -->
        <Grid Grid.Column="2" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Bàn số:" VerticalAlignment="Center" FontSize="20" Foreground="Black" Margin="333,0,0,0" Height="35" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left">
                        <Label.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="-0.63"/>
                                <TranslateTransform/>
                            </TransformGroup>
