<Window x:Class="QuanLyCaPhe.Views.Staff.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyCaPhe"
        xmlns:local1="clr-namespace:QuanLyCaPhe.Views.Components"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Quản lý quán cà phê" 
        MinHeight="600" MinWidth="1000"
        WindowStyle="SingleBorderWindow">

    <Window.Background>
        <SolidColorBrush Color="DeepSkyBlue" Opacity="0.3"/>
    </Window.Background>
    <Window.Resources>
        <local:IntGreaterThanZeroToVisibilityConverter x:Key="IntToVis"/>
        <local:SecondsToTimeConverter x:Key="SecondsToTimeConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT PANE: narrow button column + content column with nested grids -->
        <Grid Grid.Column="0">
            <!-- main area row -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <!-- N/I/D column -->
                <ColumnDefinition Width="*"/>
                <!-- content column -->
            </Grid.ColumnDefinitions>

            <!-- Narrow left column: sort buttons, clock, spacer, logout -->
            <Grid Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- sort buttons -->
                    <RowDefinition Height="Auto"/>
                    <!-- clock -->
                    <RowDefinition Height="*"/>
                    <!-- spacer -->
                    <RowDefinition Height="Auto"/>
                    <!-- logout -->
                </Grid.RowDefinitions>

                

                <!-- Clock placed below sort buttons; foreground set to black as requested. Increase width to avoid wrapping. -->
                <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,4" Width="72">
                    <TextBlock x:Name="tbClockTime" FontSize="14" FontWeight="Bold" Foreground="Black" HorizontalAlignment="Center" TextAlignment="Center" />
                    <TextBlock x:Name="tbClockDayMonth" FontSize="11" Foreground="Black" HorizontalAlignment="Center" TextAlignment="Center" />
                    <TextBlock x:Name="tbClockYear" FontSize="11" Foreground="Black" HorizontalAlignment="Center" TextAlignment="Center" />
                </StackPanel>

                <Button x:Name="btnLogout" Grid.Row="3" Content="L" Click="BtnLogout_Click"
                        Width="36" Height="36" Margin="0,8" HorizontalAlignment="Center" VerticalAlignment="Bottom" ToolTip="Log out" FontWeight="Bold"/>
            </Grid>

            <!-- Content column: title, tables -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.25*"/>
                    <RowDefinition Height="4*"/>
                </Grid.RowDefinitions>
                
                <!-- Title-->
                <Grid Grid.Row="0">
                    <Border Style="{StaticResource RunningGlowBorderStyle}"
                            Margin="10, 10, 10, 10">
                        <TextBlock Text="LTTQ Coffee" FontSize="36" FontWeight="Bold" FontFamily="{StaticResource TitleFont}"
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Grid>

                <!-- Tables area -->
                <Grid Grid.Row="1">
                    <Border Style="{StaticResource LiquidGlassStyle}" 
                            Margin="0, 5, 10, 0" Padding="10, 10, 5, 20"
                            Width="auto" MinWidth="360" MaxWidth="360">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Subtiltle -->
                            <TextBlock Text="Danh sách bàn" FontSize="30" FontWeight="Bold" FontFamily="{StaticResource TitleFont}"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            
                            <!-- Sort ComboBox-->
                            <ComboBox x:Name="cbSort" Grid.Row="1"
                                      Style="{StaticResource ComboBoxStyle}"
                                      Width="180"
                                      VerticalAlignment="Center" HorizontalAlignment="Left" IsReadOnly="True"
                                      SelectionChanged="cbSort_SelectionChanged">
                                <TextBlock Text="Mặc định A-Z"/>
                                <TextBlock Text="Tăng dần - thời gian"/>
                                <TextBlock Text="Giảm dần - thời gian"/>
                            </ComboBox>
                            <!-- Blank Line-->
                            <Border Grid.Row="1" Style="{StaticResource RunningGlowBorderStyle}" 
                                    Width="360" Height="0.6" 
                                    HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <!-- ListBox fills available space -->
                            <ListBox x:Name="lbTables" Grid.Row="2"
                                     ItemsSource="{Binding DanhSachBan}"
                                     Style="{StaticResource CafeTableListBoxStyle}" d:ItemsSource="{d:SampleData ItemCount=6}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Button Tag="{Binding Id}"
                                                Click="Table_Click"
                                                PreviewMouseLeftButtonDown="Table_PreviewMouseLeftButtonDown"
                                                Style="{StaticResource TableCardButtonStyle}">

                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="Bold" 
                                                           FontSize="15" 
                                                           HorizontalAlignment="Center"
                                                           Margin="0,0,0,2"/>

                                                <Border Background="#15000000" CornerRadius="4" Padding="6,2"
                                                        Visibility="{Binding Countdown, Converter={StaticResource IntToVis}}">
                                                    <TextBlock Text="{Binding Countdown, Converter={StaticResource SecondsToTimeConverter}}"
                                                               FontSize="12"
                                                               FontWeight="SemiBold"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </StackPanel>
                                        </Button>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <!-- Add table-->
                            <Button x:Name="btnAddTable" Grid.Row="2" Panel.ZIndex="999"
                                    Style="{StaticResource FabButtonStyle}" 
                                    HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                    Margin="0, 0, 5, 0">
                                <TextBlock Text="&#xE710;" FontFamily="Segoe MDL2 Assets" 
                                           FontSize="20" FontWeight="Bold" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

        </Grid>

        <!-- RIGHT PANE unchanged -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1.25*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="1" Content="Bàn số:" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15"/>
                    <TextBlock x:Name="tbTableNumber" Grid.Column="2" Text="1" HorizontalAlignment="Center"
                               Background="LightGray" Width="50" TextAlignment="Center"
                               VerticalAlignment="Bottom" FontSize="25"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Đồ order" FontSize="12" VerticalAlignment="Center"/>
                        <ComboBox x:Name="cbOrder" Grid.Row="1" SelectionChanged="ComboBox_SelectionChanged_2" Height="28" VerticalAlignment="Top"
                                  IsEditable="True" IsTextSearchEnabled="False" StaysOpenOnEdit="True" />
                    </Grid>

                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Số lượng" FontSize="12" VerticalAlignment="Center"/>

                        <xctk:IntegerUpDown x:Name="iudAmmount" Grid.Row="1" 
                                            ValueChanged="iudAmmount_ValueChanged" Height="28" VerticalAlignment="Top"/>
                    </Grid>

                    <Grid Grid.Column="5">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="" FontSize="12" VerticalAlignment="Center"/>
                        <Button Grid.Row="1" x:Name="btnAdd" Content="Thêm món" 
                                VerticalAlignment="Top" Height="28" Click="btnAdd_Click"/>
                    </Grid>

                    <Grid Grid.Column="6">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        
                        <Label Grid.Row="0" Content="" FontSize="12" VerticalAlignment="Center"/>
                        <Button Grid.Row="1" x:Name="btnDelete" Content="Xóa" 
                                VerticalAlignment="Top" Height="28" Width="50" Click="btnDelete_Click"/>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <Border Style="{StaticResource LiquidGlassStyle}"  
                        Margin="0, 5, 10, 0" Padding="10, 10, 5, 10">
                    <DataGrid Name="dtgdOrder"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              ColumnWidth="*"
                              Style="{StaticResource CardStyleDataGridStyle}" Height="312" VerticalAlignment="Bottom">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                            <DataGridTextColumn Header="Món" Binding="{Binding Mon}" />
                            <DataGridTextColumn Header="Đơn giá" Binding="{Binding Gia}" />
                            <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" />
                            <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>

            <Grid Grid.Row="2">
                <Border Style="{StaticResource LiquidGlassStyle}"
                        Margin="0, 5, 10, 0" Padding="20, 10, 20, 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="4*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>

                            <Label Content="Số giờ:" Grid.Column="0" HorizontalAlignment="Left" FontSize="15" Margin="5,0,10,0" VerticalAlignment="Center"/>

                            <StackPanel x:Name="spHours" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,11,0,0">
                                <RadioButton x:Name="rbHour1" GroupName="Hours" Content="1" Tag="6000"
                                             Checked="HourRadio_Checked"
                                             PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                             ToolTip="1 hour (6.000 VNĐ)" Margin="4,0" FontSize="13"/>
                                <RadioButton x:Name="rbHour3" GroupName="Hours" Content="3" Tag="12000"
                                             Checked="HourRadio_Checked"
                                             PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                             ToolTip="3 hours (12.000 VNĐ)" Margin="6,0" FontSize="13"/>
                                <RadioButton x:Name="rbHour6" GroupName="Hours" Content="6" Tag="18000"
                                             Checked="HourRadio_Checked"
                                             PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                             ToolTip="6 hours (20.000 VNĐ)" Margin="6,0" FontSize="13"/>
                                <RadioButton x:Name="rbHour12" GroupName="Hours" Content="12" Tag="25000"
                                             Checked="HourRadio_Checked"
                                             PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                             ToolTip="12 hours (35.000 VNĐ)" Margin="6,0" FontSize="13"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Label Content="Tổng tiền:" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="15" />

                                <TextBlock Name="tbSum" 
                                           Padding="3, 0, 6, 0"
                                           HorizontalAlignment="Right" VerticalAlignment="Center"
                                           Background="LightGray" 
                                           MinWidth="150" MaxWidth="300"
                                           TextAlignment="Right" FontSize="22" FontWeight="Bold">
                                </TextBlock>
                            </StackPanel>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="7*"/>
                                <ColumnDefinition Width="8*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="12*"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0" Grid.ColumnSpan="2">
                                <StackPanel Orientation="Horizontal">
                                    <Label Content="Chuyển bàn:" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                                    <ComboBox x:Name="cbxSwapTable" Height="30" Width="90" HorizontalAlignment="Left" SelectionChanged="ComboBox_SelectionChanged_3" />
                                </StackPanel>
                            </Grid>


                            <Grid Grid.Column="6">
                                <Button x:Name="btnPurchase" Content="Thanh toán" FontSize="15"
                                        VerticalAlignment="Center" HorizontalAlignment="Right"
                                        Height="30" Width="130"
                                        Click="Button_Click_1"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>