                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.25*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="0.5*"/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Đồ order" FontSize="12" VerticalAlignment="Top" Foreground="#FFFFF6F6" Margin="0,-7,0,0"/>
                        <ComboBox x:Name="cbOrder"   Height="28" VerticalAlignment="Top"
                                  IsEditable="True"  IsTextSearchEnabled="False" StaysOpenOnEdit="True" Margin="0,19,0,0" Grid.RowSpan="2" IsReadOnly="False" />
                    </Grid>

                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Content="Số lượng" FontSize="12" VerticalAlignment="Top" Foreground="#FFFFFEFE" Margin="0,-7,0,0"/>
                        <xctk:IntegerUpDown x:Name="iudAmmount" ValueChanged="iudAmmount_ValueChanged" Margin="0,19,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Height="29" />
                    </Grid>

                    <Grid Grid.Column="5">
                        <Button x:Name="btnAdd" Content=" " Style="{StaticResource OverlayButtonStyle}" VerticalAlignment="Top" Height="58" Click="btnAdd_Click" RenderTransformOrigin="0.542,0.586" BorderBrush="{x:Null}" HorizontalAlignment="Center" Width="69" Margin="0,-5,0,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Views/Staff/icons8-add-64.png"/>
                            </Button.Background>
                        </Button>
                    </Grid>

                    <Grid Grid.Column="6">
                        <Button x:Name="btnDelete" Content=""  Style="{StaticResource OverlayButtonStyle}" VerticalAlignment="Top" Height="59" Click="btnDelete_Click" BorderBrush="{x:Null}" HorizontalAlignment="Center" Width="59" Margin="0,-5,0,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Views/Staff/icons8-delete-64.png"/>
                            </Button.Background>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Margin="0,89,0,65" Grid.RowSpan="3">
                <DataGrid x:Name="dtgdOrder"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          ColumnWidth="*">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50" />
                        <DataGridTextColumn Header="Món" Binding="{Binding Mon}" />
                        <DataGridTextColumn Header="Đơn giá" Binding="{Binding Gia}" />
                        <DataGridTextColumn Header="Số lượng" Binding="{Binding SoLuong}" />
                        <DataGridTextColumn Header="Thành tiền" Binding="{Binding ThanhTien}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <Grid Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,10,0,0" Height="73" Width="480">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="11*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="43*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="26,0,0,5" Width="302">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Số giờ:" Grid.Column="0" HorizontalAlignment="Center" FontSize="15" Margin="5,0,10,0" VerticalAlignment="Top" Foreground="White"/>

                    <StackPanel x:Name="spHours" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,11,0,0">
                        <RadioButton x:Name="rbHour1" GroupName="Hours" Content="1" Tag="6000"
                                     Checked="HourRadio_Checked"
                                     PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                     ToolTip="1 hour (6.000 VNĐ)" Margin="4,0" FontSize="13" Foreground="White"/>
                        <RadioButton x:Name="rbHour3" GroupName="Hours" Content="3" Tag="12000"
                                     Checked="HourRadio_Checked"
                                     PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                     ToolTip="3 hours (12.000 VNĐ)" Margin="6,0" FontSize="13" Background="White" Foreground="White"/>
                        <RadioButton x:Name="rbHour6" GroupName="Hours" Content="6" Tag="18000"
                                     Checked="HourRadio_Checked"
                                     PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                     ToolTip="6 hours (20.000 VNĐ)" Margin="6,0" FontSize="13" Foreground="White" Background="White"/>
                        <RadioButton x:Name="rbHour12" GroupName="Hours" Content="12" Tag="25000"
                                     Checked="HourRadio_Checked"
                                     PreviewMouseLeftButtonDown="HourRadio_PreviewMouseLeftButtonDown"
                                     ToolTip="12 hours (35.000 VNĐ)" Margin="6,0" FontSize="13" Foreground="White" Background="White"/>
                    </StackPanel>

                    <Label Grid.Column="2" Content="Tổng tiền:" VerticalAlignment="Top" FontSize="15" Foreground="White" Grid.ColumnSpan="2" Margin="0,4,0,0" />

                    <TextBlock x:Name="tbSum" Grid.Column="3"
                               Background="LightGray" TextAlignment="Center" FontSize="22"
                               FontWeight="Bold" Margin="45,6,-152,0" VerticalAlignment="Top"/>
                </Grid>

                <Grid HorizontalAlignment="Left" Grid.Column="1" Margin="330,35,0,0" Grid.RowSpan="2" Width="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="12*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="11*"/>
                            <ColumnDefinition Width="15*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>

                    <Grid Grid.Column="1"/>

                    <Grid Grid.Column="6"/>
                </Grid>
                <Label Content="Chuyển bàn:" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="White" Margin="48,0,0,0" Grid.Row="1" Height="30" Width="92"/>
                <ComboBox x:Name="cbxSwapTable" SelectionChanged="ComboBox_SelectionChanged_3" Margin="13,10,227,5" Grid.Row="1" Grid.Column="1" />
                <Button x:Name="btnPurchase" Content="Thanh toán"
                                Click="Button_Click_1" FontSize="15" Margin="220,5,20,3" Grid.Row="1" Grid.Column="1"/>
            </Grid>

        </Grid>
    </Grid>
</Window>